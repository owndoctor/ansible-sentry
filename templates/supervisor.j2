[program:sentry-web]
directory={{deploy_root}}
command={{virtualenv}}/bin/sentry --config={{sentry_conf_file}} start http
autostart=true
autorestart=true
redirect_stderr=true

[program:sentry-cron]
directory={{deploy_root}}
command={{virtualenv}}/bin/sentry --config={{sentry_conf_file}} run cron
autostart=true
autorestart=true
redirect_stderr=true

[program:sentry-smtp]
directory={{deploy_root}}
command={{virtualenv}}/bin/sentry --config={{sentry_conf_file}} run smtp
autostart=true
autorestart=true
redirect_stderr=true

[program:sentry-worker]
directory={{deploy_root}}
command={{virtualenv}}/bin/sentry --config={{sentry_conf_file}} run worker
autostart=true
autorestart=true
redirect_stderr=true
